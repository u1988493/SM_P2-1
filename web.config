<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <staticContent>
      <mimeMap fileExtension=".json" mimeType="application/json" />
    </staticContent>
    
    <!-- AUTORIZACIÓN: Permitir acceso público a archivos estáticos -->
    <security>
      <authorization>
        <!-- El "?" significa "usuario anónimo" - permite acceso sin autenticación -->
        <add accessType="Allow" users="?" />
      </authorization>
    </security>

    <!-- Habilitar rewrite para Azure -->
    <rewrite>
      <rules>
        <!-- Redirigir raíz a index.html -->
        <rule name="Root redirect" stopProcessing="true">
          <match url="^$" />
          <action type="Redirect" url="/index.html" redirectType="Temporary" />
        </rule>
        
        <rule name="Handle PHP files" stopProcessing="true">
          <match url=".*\.php$" />
          <action type="Rewrite" url="{R:0}" />
        </rule>
      </rules>
    </rewrite>

    <!-- Configuración de errores personalizados -->
    <httpErrors errorMode="Detailed" />
    
    <!-- Handlers para PHP -->
    <handlers>
      <remove name="PHP_via_FastCGI" />
      <add name="PHP_via_FastCGI" 
           path="*.php" 
           verb="GET,HEAD,POST" 
           modules="FastCgiModule" 
           scriptProcessor="D:\Program Files\PHP\v8.0\php-cgi.exe" 
           resourceType="Either" 
           requireAccess="Script" />
    </handlers>

    <!-- CORS headers -->
    <httpProtocol>
      <customHeaders>
        <add name="Access-Control-Allow-Origin" value="*" />
        <add name="Access-Control-Allow-Methods" value="GET, POST, OPTIONS" />
        <add name="Access-Control-Allow-Headers" value="Content-Type" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
</configuration>